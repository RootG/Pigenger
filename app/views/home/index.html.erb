<div>
  <div>
    <ul id="chats-list">
      <% @chats.each do |chat| %>
        <%= render 'chats/chat', chat: chat, user: current_user %>
      <% end %>
    </ul>
  </div>

  <div>
    <div>
      <div>
        <h3>User list</h3>
      </div>
      <div id="panel-body">
        <ul>
          <% @users.each do |user| %>
            <li><%= link_to user.email, chats_path(user_id: user), remote: true, method: :post %></li>
          <% end %>
        </ul>
      </div>
    </div>
  </div>
</div>
